<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="C-wrapper">
    <div class="C-content">
        <div class="C-header">
            <h1>Alterar produto</h1>
            <hr>
        </div>
        <div class="C-body">
            <form action="/produtos/update/<%= produto._id %>" method="POST">
                <label>Nome do produto:</label>
                <input type="text" name="nome" id="nome" class="form-control" value="<%= produto.nome %>" required>
                <label>Preço:</label>
                <input type="number" name="preco" id="preco" class="form-control" value="<%= produto.preco %>" required>
                <label>Categoria:</label>
                <input type="text" name="categoria" id="categoria" class="form-control" value="<%= produto.categoria%>" required>
                <input type="hidden" name="id" value="<%= produto._id %>">
                <br>
                <input type="submit" class="btn-cadastrar" value="Alterar" onclick="return confirm('Confirma as alterações?')">
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>