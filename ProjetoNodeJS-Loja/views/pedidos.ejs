<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <div class="wrapper">
            <div class="content">
                <div class="header">
                    <h1>Lista de Pedidos</h1>
                </div>
                <div class="body">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Número</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pedidos.forEach(pedido=> { %>
                                <tr>
                                    <td><img src="imgs/Pedidos.gif" width="30px"></td>
                                    <td>
                                        <%= pedido.numero %>
                                    </td>
                                    <td>
                                        <%= pedido.valor.toLocaleString('pt-br', {style: 'currency' , currency: 'BRL' })
                                            %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <a href="/" class="btn-voltar">Voltar para o início</a>
                </div>
            </div>
        </div>

        <%- include ('partials/footer.ejs') %>